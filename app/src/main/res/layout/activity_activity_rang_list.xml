<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:id="@+id/imageView3"
        android:background="@drawable/splashscreen"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <TableLayout
        android:id="@+id/layoutFirst"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="bottom"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tableRowFirst"
            android:background="#ff3d4ba8">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageViewFirstRang"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/one" />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageViewFirstAvatar"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textViewFirstUsername"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="#ffe7ecff" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/layoutSecond"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="bottom"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tableRowSecond"
            android:background="#ff5d6abc">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageViewSecondRang"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/two" />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageViewSecondAvatar"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textViewSecondUsername"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="#ffe7ecff" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/layoutThird"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tableRowThird"
            android:background="#ff7d8ad9">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageViewThirdRang"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/three" />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageViewThirdAvatar"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textViewThirdUsername"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="#ffe7ecff" />
        </TableRow>
    </TableLayout>
</LinearLayout>
